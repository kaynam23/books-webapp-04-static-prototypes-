<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheets" href="/stylesheets/stuffStyle.css">
</head>

<body style = "background-color: olivedrab;">

    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="stuffDetail">
            <img src="/images/SoAcover.jpg" width="100" height="150">
            <h1 style="color: white">Book Details:</h1>
            <a class="btn-small waves-effect waves-light" href="/inventory">
                <i class="material-icons left">arrow_back</i>Return to Inventory
                </a>
            <table>
                <tr>
                    <th style="color: white">Title:</th>
                    <td style="color: white"><%= title %></td>
                </tr>
                <tr>
                    <th style="color: white">Author:</th>
                    <td style="color: white"><%= author %></td>

                </tr>
                <tr>
                    <th style="color: white">Description:</th>
                    <td style="color: white">
                        <%= description %>
                    </td>
                </tr>

                <tr>
                    <th style="color: white">Rating:</th>
                    <td style="color: white">
                        <%= rating %>
                    </td>
                </tr>
            </table>
        </div>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light brown lighten-1 left modal-trigger" href="#stuffEdit">
                <i class="material-icons right">edit</i>Edit
            </a>
            <a class="btn-large waves-effect waves-light red darken-2 right" href="/inventory/book/<%= id %>/delete">
                <i class="material-icons right">delete</i>Delete
            </a>
        </div>


        <div class="modal" id="stuffEdit" style="background-color:rgb(113, 69, 11);">

            <div class="modal-content">

                <h2 style="color:aliceblue">Edit item:</h2>
                <form method="post" action="/inventory/book/<%= id %>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="name">Book Title:</label>
                            <input type="text" name="title" class="validate" data-length="32" value="<%= title %>" required>
                        </div>
                        <div class="input-field col s6">
                            <label for="author">Author:</label>
                            <input type="text" name="author" class="validate" data-length="32" value="<%= author %>"required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="description">Description:</label>
                            <input type="text" name="description" data-length="100"value="<%= description %>">
                        </div>
                        <div class="input-field col s6">
                            <label for="rating">Rating:</label>
                            <input type="number" name="rating" value=1 value="<%= rating 
                            %>"required>
                        </div>
                    </div>
                    <div class="modal-footer" style="background-color:rgb(113, 69, 11)">
                        <button class="btn waves-effect waves-light green darken-2" type="submit"><i
                                class="material-icons right">send</i>Submit</button>

                        <a href="#!" class="modal-close waves-effect waves-green btn-flat" style="color:rgb(255, 77, 0)">Never Mind</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>
    
</body>

</html>